<%= form_with(model: [note.project, note], local: true, multipart: true) do |f| %>
  <% if note.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <a href="#" data-dismiss="alert" class="close">Ã—</a>
      <p><strong><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</strong></p>
      <ul>
        <% note.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :message %>
    <%= f.text_area :message, class: "form-control", id: :note_message %>
  </div>

  <div class="form-group">
    <%= f.label :attachment %>
    <%= f.file_field :attachment, class: "form-control", id: :note_attachment %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", note.project, class: "btn btn-default", data: { confirm: "Are you sure?" } %>
  </div>
<% end %>
