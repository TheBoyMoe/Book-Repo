<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/rails_default' %>
    <%= render 'layouts/shim'%>
  </head>
  <body id="<%= yield(:title).downcase %>">
    <%= render 'layouts/header' %>
    <div class="container">
      <%= yield %>
    </div>
    <%= render 'layouts/footer' %>
    <% if Rails.env.development? %>
      <div class="container">
        <%= debug(params) %>
      </div>
    <% end %>
  </body>
</html>
