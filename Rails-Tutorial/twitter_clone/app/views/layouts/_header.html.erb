<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <%= link_to "sample app", root_path, class: "navbar-brand" %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",   root_path, {class: 'nav-link'} %></li>
        <li><%= link_to "Help",   help_path, {class: 'nav-link'} %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path, {class: 'nav-link'} %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", user_path(current_user), {class: 'nav-link'} %></li>
              <li><%= link_to "Settings", edit_user_path(current_user), {class: 'nav-link'} %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path, {class: 'nav-link'} %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
